<p id="notice"><%= notice %></p>

<h1>Our Menu</h1>

    <% @menu_items.each do |menu_item| %>
      
        <%= menu_item.item %>
        <%= image_tag menu_item.avatar.url(:medium), class: "img-responsive" %>
        <%= menu_item.description %>
        <%= menu_item.price %><br>
        <%= link_to 'Show', menu_item %>
        <%= link_to 'Edit', edit_menu_item_path(menu_item) %>
        <%= link_to 'Destroy', menu_item, method: :delete, data: { confirm: 'Are you sure?' } %><br><br>
      
    <% end %>


<br>

<%= link_to 'New Menu item', new_menu_item_path %>
